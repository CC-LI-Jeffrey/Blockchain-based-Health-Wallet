<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Biometric authentication permission -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Package visibility for wallet apps (Android 11+) -->
    <queries>
        <package android:name="io.metamask" />
    </queries>

    <application
        android:name=".HealthWalletApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlockchainHealthWallet"
        android:usesCleartextTraffic="true"
        tools:targetApi="31"
        tools:replace="android:dataExtractionRules">
        <!-- Main Activity - Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep link for WalletConnect callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="healthwallet" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MedicationActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VaccinationRecordActivity"
            android:exported="false"
            android:label="疫苗紀錄" />
        <activity
            android:name=".VaccinationDetailActivity"
            android:exported="false"
            android:label="疫苗紀錄詳情" />
        <activity
            android:name=".PdfViewerActivity"
            android:exported="false"
            android:label="PDF Viewer" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReportsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddReportActivity"
            android:exported="false"
            android:parentActivityName=".ReportsActivity" />
        <activity
            android:name=".ViewReportActivity"
            android:exported="false"
            android:parentActivityName=".ReportsActivity" />
        <activity
            android:name=".ImageViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.BlockchainHealthWallet.Fullscreen"
            android:parentActivityName=".ViewReportActivity" />
        <activity
            android:name=".AccessLogActivity"
            android:exported="false"
            android:label="Access Logs" />
        <activity
            android:name=".AccessLogDetailActivity"
            android:exported="false"
            android:label="Access Log Details" />
        <activity
            android:name=".ShareRecordActivity"
            android:exported="false"
            android:label="Share Records" />
        <activity
            android:name=".SharedRecordsActivity"
            android:exported="false"
            android:label="Records I Shared" />
        <activity
            android:name=".ReceivedRecordsActivity"
            android:exported="false"
            android:label="Records I Received" />
        <activity
            android:name=".ShareRecordDetailActivity"
            android:exported="false"
            android:label="Share Details" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WalletInfoActivity"
            android:exported="false"
            android:label="Wallet Information"
            android:parentActivityName=".MainActivity" />
        
        <!-- FileProvider for sharing decrypted files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>