<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share Details"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:background="@drawable/status_badge_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp" />

                <!-- Share ID -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share ID"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvShareId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SH001"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Recipient Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Name"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRecipientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Sarah Johnson"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Recipient Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Type"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRecipientType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Recipient Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipient Email"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRecipientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sarah.johnson@clinic.com"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:autoLink="email" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Shared Data -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shared Data"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSharedData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vaccination Records, Medical History"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Access Level -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Access Level"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAccessLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Only"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="16dp" />

                <!-- Date Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared Date"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvShareDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 15, 2025"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Time"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvShareTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:30"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Expiry Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvExpiryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 15, 2026"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnRevokeAccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Revoke Access"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F44336"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnExtendAccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extend Access"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
