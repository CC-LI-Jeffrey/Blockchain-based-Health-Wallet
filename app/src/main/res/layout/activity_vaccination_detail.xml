<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".VaccinationDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:tint="#333333" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vaccination Details"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Vaccine Name -->
                    <TextView
                        android:id="@+id/tvVaccineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COVID-19 Vaccine"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- Date -->
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="June 4, 2022"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="24dp" />

                    <!-- Vaccine Name English -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Type"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvVaccineNameEn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COVID-19 vaccine"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginBottom="16dp" />

                    <!-- Full Vaccine Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Vaccine Name &amp; Dose"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvVaccineFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comirnaty COVID-19 mRNA Vaccine (BNT162b2) Concentrate for Dispersion for Injection (3rd Dose)"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Manufacturer -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manufacturer"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvManufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BioNTech"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Country -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country/Region"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hong Kong"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Provider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Provider"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProvider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department of Health COVID-19 Vaccination Programme (On-Site)"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaccination Location"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community Vaccination Centre, Hiu Kwong Street Sports Centre"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                    <!-- Batch Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch Number"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBatchNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2A088A"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- View PDF Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnViewRelatedRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#FF9800" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Certificate PDF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View vaccination certificate"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
